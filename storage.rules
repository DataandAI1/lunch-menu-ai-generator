rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Menu images - read by anyone, write by functions only
    match /menu_images/{weekId}/{imageId} {
      allow read: if true;
      allow write: if false;
    }
    
    // PDF exports - read by anyone, write by functions only
    match /menu_pdfs/{weekId}/{pdfId} {
      allow read: if true;
      allow write: if false;
    }
    
    // User uploads (optional)
    match /user_uploads/{userId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
    
    // Block all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}